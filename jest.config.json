{
	"preset": "ts-jest",
	"testEnvironment": "node",
	"extensionsToTreatAsEsm": [".ts"],
	"moduleNameMapper": {
		"^(\\.{1,2}/.*)\\.js$": "$1"
	},
	"transform": {
		"^.+\\.tsx?$": [
			"ts-jest",
			{
				"useESM": true
			}
		]
	},
	"transformIgnorePatterns": [ "<rootDir>/node_modules/"],
	"coverageThreshold": {
		"global": {
			"branches": 80,
			"functions": 80,
			"lines": 80,
			"statements": 80
		}
	},
	"collectCoverage": true,
	"coverageReporters": ["text", "cobertura"],
	"collectCoverageFrom": ["./src/**/*.ts", "!**/lib/**", "!**/tests/**"]
}
