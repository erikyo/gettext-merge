{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "ES2015",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"outDir": "./lib/cjs",
		"strict": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"esModuleInterop": false,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": [
		"./**/**cli**"
	]
}
