{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2015",
		"lib": [ "Es6" ],
		"noImplicitAny": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		// Import non-ES modules as default imports.
		"outDir": "lib",
		"rootDir": "src",
		// Minify
		"pretty": false,
		// types
		"typeRoots": [
			"src/types.d.ts",
			"node_modules/@types",
			"@types"
		]
	},
	"include": [
		"./src/**/*"
	]
}
