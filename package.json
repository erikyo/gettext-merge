{
	"name": "gettext-merge",
	"version": "1.0.0",
	"description": "A Node.js script for merging a POT/PO files",
	"author": "Erik Golinelli <https://github.com/erikyo>",
	"main": "lib/index.js",
	"scripts": {
		"build": "tsc --build",
		"watch": "tsc --watch",
		"clean": "tsc --build --clean",
		"lint": "eslint ./src ./tests --fix",
		"test": "jest",
		"run": "node ./lib/index.js -i tests/fixtures/file1.pot tests/fixtures/file2.pot -o tests/fixtures/potfile.pot"
	},
	"bin": {
		"gettext-merge": "lib/index.js"
	},
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.10.4",
		"@types/yargs": "^17.0.32",
		"@typescript-eslint/eslint-plugin": "^6.18.1",
		"@typescript-eslint/parser": "^6.14.0",
		"eslint": "^8.56.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-config-standard-with-typescript": "^43.0.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-n": "^16.6.1",
		"eslint-plugin-promise": "^6.1.1",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.0",
		"prettier": "3.2.2",
		"ts-jest": "^29.1.1",
		"typescript": "^5.3.3"
	}
}
